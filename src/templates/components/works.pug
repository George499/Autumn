script(type="text/x-template")#slider-container
    .my-works__leftright        
        display(
            :works="works"
            :current-work="currentWork"
            :current-index="currentIndex"
            @slide="handleSlide"
            @preview="prevSlide"
        )
        info(
            :current-work="currentWork"
        )

script(type="text/x-template")#slider-display
    .works__left(:data-slide="currentIndex + 1")    
        .slider
            img(:src="currentWork.photo").slider__fillpic
            thumbs(
            :works="works"
            :current-work="currentWork"
            @preview="$emit('preview', $event)"
            )
            btns(
                @slide="$emit('slide', $event)"
            )

script(type="text/x-template")#slider-thumbs
    .slider__preview
        ul.previews
            li.previews__item(
                v-for="work in works"
                :key="work.id"
                @click.prevent="$emit('preview', work.id)"
                :class="{active: work.id == currentWork.id}"
                
            )
                a.works-slider__thumb-link
                    img(:src="work.photo" alt="").previews__pic
script(type="text/x-template")#slider-btns
    .slider__buttons
        .slider-button
            button(@click.prevent="$emit('slide','prev')").slider-buttons__item.slider-buttons__item--prev
                +icon('arrow-down', 'prev-icon')
            button(@click.prevent="$emit('slide','next')").slider-buttons__item.slider-buttons__item--next
                +icon('arrow-down', 'next-icon')

script(type="text/x-template")#slider-info
    .works__right
        tags(
            :tagsArray="tagsArray"
        )
        .works__text
            h1.works__title {{currentWork.title}}
        .works__desc-text
            p.works__text {{currentWork.desc}}
        a.iconed-link
            a(:href="currentWork.link").iconed-link__icon
            .iconed-link__text Посмотреть сайт

script(type="text/x-template")#slider-tags
    ul.works__tags
        li.works-tags-item(v-for="tag in tagsArray" :key="tag")
            .tag {{tag}}