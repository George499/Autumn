@import "../../styles/mixins.pcss";
button{
        
    border: none;
}
.input {
   
    font-size: 18px;
    font-weight: 600;
    color: #414c63;
    margin-right: 30px;
    padding-bottom: 30px;
    border: none;
    outline: none;
    width: 50%;
    flex: 8;  
    
    }
    .aboutme-input-wrap {
        padding-left: 5px;
        display: flex;
        align-items: center;        
        position: relative;
        &:after {        
            content: "";
            bottom: 15px;
            position: absolute;
            background:  rgba(black, .4);
            height: 2px;
            width: 40%;
            @include tablets{
                content: none; 
                
        }
            
        }
        
}
    .aboutme-input {
        padding-left: 5px;        
        align-items: center;
        position: relative;
       &:after {
           position: absolute;
           content: "";
           height: 1px;
           bottom: 0;
           background: rgba(#1f232d, .1);
           width: 93%;
           

       }
    }
    .tick {
     background: svg-load('../../images/icons/tick.svg', fill=#00d70a, width=15px, height=12px) no-repeat center center;   
     height: 12px;
     width: 15px;
     cursor: pointer;
     flex: 1;
     
     
    }
    .cross {
     background: svg-load('../../images/icons/cross.svg', fill=#bf2929, width=15px, height=12px) no-repeat center center;   
     height: 12px;
     width: 15px;
     flex: 1;
     cursor: pointer;
     
    }
    .buttons {
            flex: 2;
    display: flex;
    }
    
