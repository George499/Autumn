.main {
    background: url(../images/content/параллакс.png) center / cover no-repeat;
    position: relative;
    justify-content: center;
    height: 100vh;
}
.header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}
.navigation__list {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-self: center;
    @include tablets {
      display: none;
    }
}
.container {
    width: 1480px;
    display: flex;
    flex-direction: column;
    height: 100%;    
    justify-content: center;
    @include tablets{
      justify-content: space-around;;
    }
  }

.logo {
    font-size: 36px;
    &:hover {
        color: #ff9a00;
      }
}
.social__item {
    padding-left: 40px;
    &:first-child{
    padding-left: 0; 
    }
}

.social__link {
    width: 25px;
    height: 25px;
    fill: black;
    cursor: pointer;
    &:hover {
      fill: #ff9a00;
    }
    @include desktop {
    fill: rgba(#fff, .7);
    
    }
  }
  .social-contacts {
      display: flex;
      align-items: center;
      @include tablets {
        padding-left: 344px
      }

  }
  .navigation__item {
    margin-right: 60px;

    &:last-child{
    margin-right: 0; 
    }
    &:hover {
        color: #fff
    }
  }
  .myname {
      padding-left: 90px;
      font-size: 72px;
      text-align: start;
      line-height: 60px;
      color: rgba(#fff, 0.9)
  }
  .desc-text {
      text-align: end;
      align-self: start;
      @include tablets {
        align-self: center;
        text-align: center;
      }

  }
  .main-desc {
    height: 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    @include tablets {
      align-items: baseline;
    }
  }
  .desc-cont {
    height: 112px;
    display: flex;
      justify-content: center;
      align-items: center;
      @include tablets {
        flex-direction: column;
        
      }
  }
  .scroll {
      background: transparent;
      border: none;
      font-size: 18px;
      font-weight: 600;
      height: 10%;
      width: 10%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      align-self: center;
&:hover {
  color: #ff9a00;
  .scroll-icon {
    fill: #ff9a00
  }
}      
@include tablets {
  display: none;
}
}
  .scroll-icon {
        
    height: 30px;    
    cursor: pointer;
    fill: #ffffff;
  }
  .burger-menu {
    vertical-align: middle;
	position: relative;
	height: 22px;
	align-items: center;
    margin-left: 30px;
    align-self: center;
    display: none;
    background: none;
    border: none;
    -webkit-tap-highlight-color: transparent;
    @include tablets {
        display:  inline-flex;
       
    }
    

}

.burger-menu-link__bars {
  
    &, &:before, &:after {
        background: #fff;
        width: 24px;
        height: 5px;
        border-radius: 3px;   
             
    }
    &:before, &:after {
        content: "";
        display: block;
        position: absolute;
        
    }
    &:before {
        top: 0;
    }
    &:after {
        bottom: 0;
    }
    
}
.burger-menu-link__bars, 
.burger-menu-link__bars:after, 
.burger-menu-link__bars:before {
  &:hover {
    background: #ff9a00;
  }
}